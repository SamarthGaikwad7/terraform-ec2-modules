pipeline {
    agent any

    environment {
        AWS_CREDENTIALS = credentials('Aws_credentials') // Ensure this exists in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SamarthGaikwad7/terraform-ec2-modules.git'
            }
        }

        stage('Initialize Terraform') {
            steps {
                script {
                    bat 'terraform init'
                }
            }
        }

        stage('Plan') {
            steps {
                script {
                    bat 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Approval') {
            steps {
                input message: 'Do you want to apply the changes?', ok: 'Apply'
            }
        }

        stage('Apply') {
            steps {
                script {
                    bat 'terraform apply -auto-approve'
                }
            }
        }

        stage('Destroy') {
            when {
                beforeAgent true
                expression { return params.DESTROY }
            }
            steps {
                script {
                    bat 'terraform destroy -auto-approve'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
    }
}
