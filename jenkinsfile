pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID = credentials('Aws_credentials')   // Store AWS credentials in Jenkins
        AWS_SECRET_ACCESS_KEY = credentials('Aws_credentials')
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    if (fileExists('terraform-ec2-modules.zip')) {
                        sh 'rm -rf terraform-ec2-modules && mkdir terraform-ec2-modules'
                        sh 'unzip terraform-ec2-modules.zip -d terraform-ec2-modules'
                    } else {
                        error "terraform-ec2-modules.zip not found"
                    }
                }
            }
        }

        stage('Initialize Terraform') {
            steps {
                dir('terraform-ec2-modules') {
                    sh 'terraform init'
                }
            }
        }

        stage('Validate Terraform') {
            steps {
                dir('terraform-ec2-modules') {
                    sh 'terraform validate'
                }
            }
        }

        stage('Plan Terraform') {
            steps {
                dir('terraform-ec2-modules') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Apply Terraform') {
            steps {
                dir('terraform-ec2-modules') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }
}
